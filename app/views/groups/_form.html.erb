<%= form_for @group do |f| %>
	<% if @group.errors.any? %>
		<ul>
			<% @group.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<div class="form-group string optional">
			<%= f.label "title", class: "string optional control-label" %>
			<%= f.text_field :title, class: "string optional form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-group string optional">
			<%= f.label "description", class: "string optional control-label" %>
			<%= f.text_field :description, class: "string optional form-control" %>
		</div>
	</div>
	
		
	

	<%= f.submit "送出", data: { disable_with: "submitting..."} , class: "btn btn-primary" %>

<% end %>
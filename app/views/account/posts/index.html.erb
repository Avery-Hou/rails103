<div class="col-md-12">
	<h2 class="text-center">我發表過的文章</h2>
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Content</th>
				<th>所屬討論群</th>
				<th>Last Update</th>
				<th colspan="2">&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td>#</td>
				<td><%= render_content(post.content) %></td>
				<td><%= post.group.title %></td>
				<td><%= post.updated_at %></td>
				<td><%= link_to "Edit", edit_group_post_path(post.group, post), class: "btn btn-default btn-xs" %></td>
				<td><%= link_to "Delete", group_post_path(post.group, post), method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-default btn-xs btn-danger" %></td>
			</tr>
			<% end %>
			<% if @posts.count == 0%>
				<tr>
					<td colspan="6">尚未發表過任何文章</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
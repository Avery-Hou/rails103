<div class="col-md-12">
	<h2 class="text-center">我發表過的文章</h2>
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Content</th>
				<th>所屬討論群</th>
				<th>Last Update</th>
				<th colspan="2">&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			<%= render @posts %>
			
			<% if @posts.count == 0%>
				<tr>
					<td colspan="6">尚未發表過任何文章</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>